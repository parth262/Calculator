<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calc.simple.calc.MainActivity">

    <TextView
        android:id="@+id/output2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#ffd9d9"
        android:gravity="center|end"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/output1"
        android:layout_below="@+id/output2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#ffd9d9"
        android:gravity="bottom|end"
        android:textSize="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/output1"
        android:background="#113833"
        android:gravity="center">


        <GridLayout
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="5">

            <Button
                android:id="@+id/seven"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="9"
                android:textSize="25dp" />


            <Button
                android:id="@+id/four"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/one"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="."
                android:textSize="25dp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/equals"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:text="="
                android:textSize="25dp" />

        </GridLayout>

        <GridLayout
            android:id="@+id/methods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/numbers"
            android:orientation="vertical">

            <Button
                android:id="@+id/delete"
                android:layout_width="75dp"
                android:layout_height="72dp"
                android:background="@drawable/button"
                android:text="del"
                android:textSize="25dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="75dp"
                android:layout_height="72dp"
                android:background="@drawable/button"
                android:text="/"
                android:textSize="25dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="75dp"
                android:layout_height="72dp"
                android:background="@drawable/button"
                android:text="*"
                android:textSize="25dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="75dp"
                android:layout_height="72dp"
                android:background="@drawable/button"
                android:text="-"
                android:textSize="25dp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="75dp"
                android:layout_height="72dp"
                android:background="@drawable/button"
                android:text="+"
                android:textSize="25dp" />

        </GridLayout>


    </RelativeLayout>


</RelativeLayout>
